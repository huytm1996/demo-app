apiVersion: apps/v1
kind: Deployment
metadata:
  name: huytm-demo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: huytm-demo
  template:
    metadata:
      labels:
        app: huytm-demo
    spec:
      imagePullSecrets:
      - name: dockerhub-creds
      containers:
      - name: huytm-demo
        image: huytm1996/huytm-demo:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: demo-service
spec:
  selector:
    app: huytm-demo
  ports:
  - port: 80
    targetPort: 80
    nodePort: 31335
  type: NodePort


